  </link>
  <joint name="wall2_joint" type="fixed">
    <parent link="base_plate" />
    <child link = "wall2_link" />
    <origin xyz="0.5 0 0.48" rpy="1.57079632679 0 1.57079632679" />
  </joint>

  <link name="wall3_link">
    <collision>
