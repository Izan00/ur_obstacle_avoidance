      <geometry>
        <box size="1.0 1.0 0.02"/>
      </geometry>
    </collision>
  </link>
  <joint name="wall3_joint" type="fixed">
    <parent link="base_plate" />
    <child link = "wall3_link" />
    <origin xyz="0 0.5 0.48" rpy="1.57079632679 0 0" />
  </joint>

  <link name="wall4_link">
    <collision>
